<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_opening_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="android.developers.uvce.impetus2017.Opening_screen"
    tools:showIn="@layout/app_bar_opening_screen">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <ImageView
                android:id="@+id/eventspic"
                android:layout_width="fill_parent"
                android:layout_height="190dp"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/events" />

            <ImageView
                android:id="@+id/newspic"
                android:layout_width="fill_parent"
                android:layout_height="190dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/news" />


            <ImageView
                android:id="@+id/forumpic"
                android:layout_width="fill_parent"
                android:layout_height="190dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/forum" />


             </LinearLayout>
    </ScrollView>
</LinearLayout>
